<!-- ConfirmModal.razor -->
@inject IJSRuntime JSRuntime

<div class="modal fade" id="kt_modal_confirmation_comp" tabindex="-1" aria-hidden="true">
		<!--begin::Modal dialog-->
		<div class="modal-dialog modal-dialog-centered mw-650px">
			<!--begin::Modal content-->
			<div class="modal-content">
				<!--begin::Modal header-->
				<div class="modal-header">

				<h5 class="fw-bold modal-title">This is from component for Customer ID @CustomerId</h5>



					<!--begin::Modal title-->

					<!--end::Modal title-->
					<!--begin::Close-->
				<div class="btn btn-icon btn-sm btn-active-icon-primary" @onclick="Cancel" data-kt-users-modal-action="close">
						<i class="ki-duotone ki-cross fs-1">
							<span class="path1"></span>
							<span class="path2"></span>
						</i>
					</div>
					<!--end::Close-->
				</div>
				<!--end::Modal header-->
				<!--begin::Modal body-->
				<div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
					<!--begin::Form-->
					<p>@Message</p>
					<!--end::Form-->
				</div>

				<!--end::Modal body-->
				<div class="modal-footer">
				
					<button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
					<button type="button" class="btn btn-primary" @onclick="Confirm">Confirm</button>
				</div>

			</div>
			<!--end::Modal content-->
		</div>
		<!--end::Modal dialog-->
	</div>
	

@code {

	[Parameter] public string Message { get; set; }
	[Parameter] public int CustomerId { get; set; }

	[Parameter] public EventCallback<bool> OnConfirmation { get; set; }

    private void Confirm()
    {        
        OnConfirmation.InvokeAsync(true);
    }
	
	private async Task Cancel()
    {       		
        OnConfirmation.InvokeAsync(false);        
    }

  

	


}
